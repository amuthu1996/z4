<form class="settings-entry" id="<%= @attribute.name %>">
  <h2><%- @T(@attribute.display) %></h2>
  <p class="help-text"><%- @T(@attribute.help) %></p>
  <div class="horizontal end">
    <div class="form-item flex <%= @attribute.tag %>"></div>
    <button type="submit" class="btn btn--primary"><%- @T('Submit') %></button>
  </div>
</form>
